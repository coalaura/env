{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.mjs",
			"**/*.cjs",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.css",
			"**/*.scss",
			"**/*.pcss",

			"!**/dist",
			"!**/build",
			"!**/*.bundle.js",
			"!**/*.min.js",
			"!**/*.min.css"
		]
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 180,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"expand": "auto",
		"formatWithErrors": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useSingleVarDeclarator": "off",
				"noParameterAssign": "off",
				"useNumberNamespace": "off",
				"noUselessElse": "off",
				"useExponentiationOperator": "off"
			},
			"suspicious": {
				"noPrototypeBuiltins": "off",
				"noControlCharactersInRegex": "off",
				"noAssignInExpressions": "info",
				"noAsyncPromiseExecutor": "off",
				"noApproximativeNumericConstant": "off",
				"noSparseArray": "warn"
			},
			"complexity": {
				"useLiteralKeys": "off",
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noImportantStyles": "info"
			},
			"performance": {
				"noDelete": "info"
			},
			"correctness": {
				"noPrecisionLoss": "off",
				"noInnerDeclarations": "off"
			}
		}
	},
	"javascript": {
		"globals": [
			"$",
			"_"
		],
		"formatter": {
			"trailingCommas": "es5",
			"arrowParentheses": "asNeeded"
		}
	},
	"json": {
		"parser": {
			"allowComments": false,
			"allowTrailingCommas": false
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"selfCloseVoidElements": "always"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}